<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/daw2</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="hibernate/Facturaingreso.hbm.xml"/>
    <mapping resource="hibernate/Proveedor.hbm.xml"/>
    <mapping resource="hibernate/Contrato.hbm.xml"/>
    <mapping resource="hibernate/Comprobanteretencion.hbm.xml"/>
    <mapping resource="hibernate/Representante.hbm.xml"/>
    <mapping resource="hibernate/Cliente.hbm.xml"/>
    <mapping resource="hibernate/Detalleingreso.hbm.xml"/>
    <mapping resource="hibernate/Facturaegreso.hbm.xml"/>
    <mapping resource="hibernate/Configuraciodelsistema.hbm.xml"/>
    <mapping resource="hibernate/Detalleegreso.hbm.xml"/>
    <mapping resource="hibernate/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
